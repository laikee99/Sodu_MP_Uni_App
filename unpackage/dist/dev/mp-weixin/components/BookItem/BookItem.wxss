.book-item-container {
  height: 150rpx;
  width: 100%;
  overflow: hidden;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20rpx 20rpx 0rpx 20rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  box-sizing: border-box;
}
.book-item-container .checkbox-container {
  width: 80rpx;
}
.book-item-container .main-container {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  line-height: 40rpx;
  font-size: 26rpx;
  overflow: hidden;
}
.book-item-container .main-container .top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.book-item-container .main-container .top .time {
  width: 240rpx;
  color: #909090;
  font-weight: 300;
  text-align: right;
}
.book-item-container .main-container .top .name-contaienr {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  overflow: hidden;
}
.book-item-container .main-container .top .name {
  font-size: 30rpx;
  word-break: keep-all;
  /* 不换行 */
  white-space: nowrap;
  /* 不换行 */
  overflow: hidden;
  /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow: ellipsis;
  /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
}
.book-item-container .main-container .top .new {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  height: 50rpx;
  width: 60rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 100% 100%;
  margin-left: 15rpx;
}
.book-item-container .main-container .bottom {
  color: #888;
  line-height: 80rpx;
  font-weight: 300;
  word-break: keep-all;
  /* 不换行 */
  white-space: nowrap;
  /* 不换行 */
  overflow: hidden;
  /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow: ellipsis;
  /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
}
.book-item-container:before {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1rpx;
  border-bottom: 1rpx solid #dbdbdb;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

